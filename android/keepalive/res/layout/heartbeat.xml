<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:id="@+id/chat_function_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/chat_input_wrapper"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/chatPlus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:src="@android:drawable/ic_input_add" >
            </ImageButton>

            <EditText
                android:id="@+id/chatText"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_gravity="bottom"
                android:layout_margin="2dp"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/sendBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:src="@android:drawable/ic_menu_send" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/chat_more_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:visibility="gone" >

            <ImageButton
                android:id="@+id/chat_pic_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_margin="5dp"
                android:padding="10dp"
                android:src="@drawable/menu_pic" />

            <ImageButton
                android:id="@+id/chat_mic_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_margin="5dp"
                android:padding="10dp"
                android:src="@drawable/menu_mic" />
        </LinearLayout>
    </LinearLayout>

    <ListView
        android:id="@+id/avoscloud_chat_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/chat_function_wrapper"
        android:divider="#fff"
        android:dividerHeight="0dp" >
    </ListView>

</RelativeLayout>